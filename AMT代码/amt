<script>
    // 提交回答的函数
    function submitResponse() {
        var response1 = document.getElementById('question1').value;
        var response2 = document.getElementById('question2').value;
        
        if(response1.trim() === '' || response2.trim() === '') {
            alert("请回答所有问题！");
            return;
        }
        
        // 在这里可以处理提交逻辑，例如发送到服务器
        alert("感谢您的提交！");
        
        // 清空文本框
        document.getElementById('question1').value = '';
        document.getElementById('question2').value = '';
    }
</script>

